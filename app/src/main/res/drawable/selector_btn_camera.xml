<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="oval">
            <solid android:color="@color/colorAccent" />
            <stroke android:width="@dimen/capture_button_border" android:color="@color/white" />
        </shape>

    </item>
    <item android:state_enabled="false">
        <shape android:shape="oval">
            <solid android:color="@color/grey_700" />
            <stroke android:width="@dimen/capture_button_border" android:color="@color/grey_500" />
        </shape>
    </item>

    <item>
        <shape android:shape="oval">
            <solid android:color="@color/blue_grey_100" />
            <stroke android:width="@dimen/capture_button_border" android:color="@color/white" />
        </shape>
    </item>
</selector>